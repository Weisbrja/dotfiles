#!/bin/sh

# start the session
lxsession -a &

# start the compositor
picom &

# set the wallpaper
#xwallpaper --zoom "$HOME/.config/wallpaper.jpg" &
hsetroot -solid '#000000' &

# start redshift
redshift -t 4500:3500 -l 49.46:8.48 &

# start dwmblocks
dwmblocks &

# bluetooth applet
blueman-applet &

# enable automatic locking
xautolock -time 5 -locker slock &

# remove the mouse when idle
unclutter &

# set character repeatition rate
xset r rate 300 50 &

# start dwm
while true
do
	dwm >/dev/null 2>&1
done
exec dwm
