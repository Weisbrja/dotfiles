[global]
	// font
	font = iosevka 9

	// size
	geometry = "320x8-0"
	shrink = yes

	// appearance
	padding = 4
	horizontal_padding = 4
	indicate_hidden = true
	separator_height = 2
	frame_width = 2
	frame_color = "#b16286"
	separator_color = frame

	// style
	markup = full
	format = "<b>%s</b>\n%b"
	word_wrap = yes

	// follow monitor selected by keyboard
	follow = keyboard

	// do not remove notifications if idle
	idle_threshold = 120

	// sorty notifications by urgency
	sort = yes

[urgency_low]
	background = "#282828"
	foreground = "#ebdbb2"
	timeout = 20

[urgency_normal]
	background = "#282828"
	foreground = "#ebdbb2"
	timeout = 20

[urgency_critical]
	background = "#282828"
	foreground = "#cc241d"
	frame_color = "#cc241d"
	timeout = 0
