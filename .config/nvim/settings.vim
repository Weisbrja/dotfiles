set encoding=utf-8
set fileencoding=utf-8

set tabstop=4
set shiftwidth=4
set noexpandtab

" set horizontal split to be horizontal
set splitbelow

" set vertical split to be vertical
set splitright

set number
set relativenumber

" global copy and paste buffer
set clipboard=unnamedplus

set ignorecase
set incsearch

" mouse support
set mouse=a

" vimtex settings
let g:tex_flavor = 'latex'
let g:tex_conceal = ''
let g:vimtex_latexmk_continuous = 1

let g:vimtex_view_method = 'zathura'
