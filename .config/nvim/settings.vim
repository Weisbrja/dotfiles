" global copy and paste buffer
set clipboard=unnamedplus

" indentation
set tabstop=4 shiftwidth=4 smarttab smartindent autoindent

" title
set title

" wrap lines after words
set linebreak

" read files when they changed
set autoread

" better splits
set splitbelow splitright

" better search
set ignorecase smartcase incsearch hlsearch

" better backspace
set backspace=indent,eol,start

" mouse support
set mouse=a

" disable concealing
set conceallevel=0
