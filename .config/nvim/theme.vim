" line numbers
set number relativenumber

" sign column
set signcolumn=yes

" disable showing current mode
set noshowmode

" highlight current cursor line
set cursorline

" disable introductory message
set shortmess=I

" completion menu height
set pumheight=10

" theme
let g:gruvbox_italic=1
set termguicolors
set background=dark
colorscheme gruvbox
