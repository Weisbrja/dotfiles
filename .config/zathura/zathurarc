# font
set font 'Hermit 8'

# colors
set default-fg '#acada1'
set default-bg '#272822'

set statusbar-fg '#f1ebeb'
set statusbar-bg '#48483e'

set inputbar-fg '#f1ebeb'
set inputbar-bg '#272822'

set index-fg '#acada1'
set index-bg '#272822'
set index-active-fg '#f1ebeb'
set index-active-bg '#48483e'

set completion-fg '#acada1'
set completion-bg '#272822'
set completion-highlight-fg '#f1ebeb'
set completion-highlight-bg '#48483e'

set notification-fg '#f1ebeb'
set notification-bg '#48483e'
set notification-error-fg '#dc2566'
set notification-error-bg '#48483e'
set notification-warning-fg '#d4c96e'
set notification-warning-bg '#48483e'

set highlight-color '#9358fe'
set highlight-active-color '#ae82ff'

# recoloring settings
set recolor true
set recolor-lightcolor '#272822'
set recolor-darkcolor '#f1ebeb'
set recolor-keephue true
set recolor-reverse-video true

# other settings
set n-completion-items 20

set show-hidden true

set window-title-basename true
set window-title-home-tilde true

set statusbar-home-tilde true

set render-loading false

set incremental-search

set selection-clipboard clipboard

# mappings
map H zoom in
map L zoom out
unmap -
unmap +
map i recolor
map p print
