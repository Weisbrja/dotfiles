# font
set font 'iosevka 10'

set guioptions ''

# colors
set notification-error-bg   "#282828"
set notification-error-fg   "#cc241d"
set notification-warning-bg "#282828"
set notification-warning-fg "#d79921"
set notification-bg         "#282828"
set notification-fg         "#ebdbb2"

set completion-bg           "#3c3836"
set completion-fg           "#ebdbb2"
set completion-group-bg     "#282828"
set completion-group-fg     "#b16286"
set completion-highlight-bg "#b16286"
set completion-highlight-fg "#ebdbb2"

set index-bg                "#282828"
set index-fg                "#ebdbb2"
set index-active-bg         "#3c3836"
set index-active-fg         "#b16286"

set inputbar-bg             "#282828"
set inputbar-fg             "#ebdbb2"

set statusbar-bg            "#3c3836"
set statusbar-fg            "#ebdbb2"

set highlight-color         "#b16286"
set highlight-active-color  "#d3869b"

set default-bg              "#282828"
set default-fg              "#ebdbb2"

set render-loading          true
set render-loading-bg       "#282828"
set render-loading-fg       "#ebdbb2"

set recolor-lightcolor      "#282828"
