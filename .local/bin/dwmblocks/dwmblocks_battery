#!/bin/sh

printf ' ^c#f1ebeb^Bat '

for battery in '/sys/class/power_supply/BAT'?*
do
	capacity=$(cat "$battery/capacity")
	status=$(cat "$battery/status")
	case "$status" in
		'Full') status='F' ;;
		'Discharging') status='-' ;;
		'Charging') status='+' ;;
		'Not charging') status='0' ;;
		'Unknown') status='?' ;;
	esac

	printf '^c#56b7a5^%3s%% %s ' "$capacity" "$status"
done
