#!/bin/sh

color=1

volume=$(pamixer --get-volume)

speakers=$(pamixer --get-mute | sed 's/false/A/;s/true/M/')

if amixer get Capture | grep -Fwq '[on]'
then
	microphone='R'
else
	microphone='M'
fi

printf ' ^c%s^Vol ^c%s^%3s%% %s %s ' "$(get_xresource foreground:)" "$(get_xresource color$color:)" "$volume" "$speakers" "$microphone"
