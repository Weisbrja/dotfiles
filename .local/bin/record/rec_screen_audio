#!/bin/sh

if [ -z "$1" ]
then
	filename="$(dmenu -l 0 -p 'Filename' <&-)"
else
	filename="$1"
fi

screen_resolution="$(xrandr -q --current | grep '*' | awk '{ print $1 }' | dmenu -p 'Resolution')"

ffmpeg \
	-f x11grab -s "$screen_resolution" -framerate 20 -i :0.0 \
	-f pulse -i default \
	-c:v libx265 -pix_fmt yuv420p -preset ultrafast \
	-c:a aac \
	"$filename"
