#/bin/sh

case "$1" in
	'restart'|'r')
		killall 'spotifyd' 2>/dev/null
		spotifyd --no-daemon >/dev/null & disown && echo 'restarted spotifyd'
		;;
	'kill'|'k')
		killall 'spotifyd' 2>/dev/null && echo 'killed spotifyd' || echo 'spotifyd was not running'
		;;
	'status'|'t')
		pgrep 'spotifyd' >/dev/null && echo 'spotifyd is running' || echo 'spotifyd is not running'
		;;
	'start'|'s')
		if pgrep 'spotifyd' >/dev/null
		then
			echo 'spotifyd was already running'
		else
			spotifyd && echo 'started spotifyd'
		fi
		;;
	*)
		pgrep 'spotifyd' 1>/dev/null || spotifyd && spt
		;;
esac
